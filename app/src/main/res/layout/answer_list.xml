<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/answer_bg"
        android:layout_marginTop="@dimen/margin_answer_card_vertical"
        android:layout_marginBottom="@dimen/margin_answer_card_vertical"
        android:layout_marginStart="@dimen/margin_answer_card_horizontal"
        android:layout_marginEnd="@dimen/margin_answer_card_horizontal">

        <TextView
            android:id="@+id/answer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textSize="@dimen/name_size_answer_card"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/answer_calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/calories_size_answer_card"/>

        <TextView
            android:id="@+id/answer_serving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/serving"
            android:gravity="end"
            android:paddingEnd="60dp"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/info_size_answer_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/answer_items"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/items"
                android:textSize="@dimen/info_size_answer_card"
                android:textColor="@color/ice_1"
                android:background="@color/primary_1"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/answer_values"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/no_value"
                android:textSize="@dimen/info_size_answer_card"
                android:textColor="@color/ice_1"
                android:background="@color/primary_1"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/answer_subscribe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="* Subscribe to access full info"
                android:textColor="@color/grey_text"
                android:textSize="@dimen/subscribe_size_answer_card"
                android:layout_weight="2"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/answer_save_button"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/button_blue"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</GridLayout>