<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/answer_bg"
        android:layout_marginTop="@dimen/margin_answer_card"
        android:layout_marginStart="@dimen/margin_answer_card"
        android:layout_marginEnd="@dimen/margin_answer_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/answer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/name_size_answer_card"
                android:layout_weight="2"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/answer_calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="@dimen/name_size_answer_card"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/answer_serving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/serving"
            android:gravity="end"
            android:paddingEnd="20dp"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/info_size_answer_card" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dots"
                    android:lines="1"
                    android:ellipsize="none"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/answer_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sugar"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fiber"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sodium"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/potassium"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_item_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saturated"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_item_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_item_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cholesterol"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_item_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carbohydrates"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_item_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/protein"
                    android:textSize="@dimen/info_size_answer_card"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_alignParentEnd="true"
                android:gravity="end">

                <TextView
                    android:id="@+id/answer_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_fiber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_sodium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_potassium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_saturated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_cholesterol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_carbohydrated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

                <TextView
                    android:id="@+id/answer_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:textSize="@dimen/info_size_answer_card"
                    android:textColor="@color/ice_1"
                    android:background="@color/primary_1"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/answer_subscribe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="* Subscribe to access full info"
                android:textColor="@color/grey_text"
                android:textSize="@dimen/subscribe_size_answer_card"
                android:layout_weight="2"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/answer_save_button"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/button_blue"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</GridLayout>