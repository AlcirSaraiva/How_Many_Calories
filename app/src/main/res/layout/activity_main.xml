<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/root_view" >

    <ImageView
        android:id="@+id/bottom_banner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/banner"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:id="@+id/main_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_accent_2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_little">

                    <TextView
                        android:id="@+id/question_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/question"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_1"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <ImageButton
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/burger"
                            android:background="@color/transparent"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"/>

                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:minHeight="45dp"
                    android:inputType="text|textCapSentences"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:background="@drawable/input"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="@dimen/margin_little"/>

                <ImageButton
                    android:id="@+id/question_button"
                    android:layout_width="170dp"
                    android:layout_height="52dp"
                    android:text="@string/question_button"
                    android:textAllCaps="false"
                    android:src="@drawable/button_fg"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button_bg"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/results_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/results"
                        android:textSize="@dimen/text_size_tab_buttons"
                        android:textColor="@color/black"
                        android:background="@color/transparent"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/saved_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/saved"
                        android:textSize="@dimen/text_size_tab_buttons"
                        android:textColor="@color/grey_button_text"
                        android:background="@color/transparent"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/secondary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/results_button_underline"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/primary"
                        android:orientation="horizontal"/>

                    <LinearLayout
                        android:id="@+id/saved_button_underline"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:orientation="horizontal"/>

                </LinearLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/answer_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary"
                android:divider="@color/transparent"
                android:scrollbarStyle="outsideInset"/>

            <ListView
                android:id="@+id/saved_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary"
                android:divider="@color/transparent"
                android:scrollbarStyle="outsideInset"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/online_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:paddingTop="@dimen/card_padding_vertical"
                android:paddingBottom="@dimen/card_padding_vertical"
                android:paddingStart="@dimen/card_padding_horizontal"
                android:paddingEnd="@dimen/card_padding_horizontal"
                android:background="@drawable/card_white"
                android:orientation="vertical"
                android:elevation="@dimen/elevation" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height"
                    android:layout_marginBottom="@dimen/card_image_margin"
                    android:scaleType="fitCenter"
                    android:src="@drawable/offline" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/offline_title"
                    android:textSize="@dimen/card_title"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/card_title_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/card_text"
                    android:text="@string/offline_text"
                    android:textColor="@color/grey_text"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subscription_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/button_subscription_close"
                android:layout_width="@dimen/button_size_little"
                android:layout_height="@dimen/button_size_little"
                android:src="@drawable/close"
                android:paddingTop="@dimen/button_margin_little"
                android:paddingEnd="@dimen/button_margin_little"
                android:scaleType="fitCenter"
                android:background="@color/transparent"
                android:layout_gravity="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginEnd="@dimen/card_margin"
                android:paddingTop="@dimen/card_padding_vertical"
                android:paddingBottom="@dimen/card_padding_vertical"
                android:paddingStart="@dimen/card_padding_horizontal"
                android:paddingEnd="@dimen/card_padding_horizontal"
                android:background="@drawable/card_white"
                android:orientation="vertical"
                android:elevation="@dimen/elevation" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height"
                    android:layout_marginBottom="@dimen/card_image_margin"
                    android:scaleType="fitCenter"
                    android:src="@drawable/no_ads_card" />

                <TextView
                    android:id="@+id/subscription_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/subscription_title"
                    android:textSize="@dimen/card_title"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/card_title_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/card_text"
                    android:text="@string/subscription_text"
                    android:textColor="@color/grey_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/card_subtitle"
                    android:text="@string/subscription_benefits_title"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/card_title_margin"
                    android:textColor="@color/grey_text_subtitle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/card_text"
                    android:text="@string/subscription_benefits"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="@dimen/card_title_margin"
                    android:textColor="@color/grey_text"/>

                <Button
                    android:id="@+id/button_buy_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_button"
                    android:textAllCaps="false"
                    android:background="@drawable/button_blue"
                    android:layout_marginTop="@dimen/card_button_margin"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/card_button_padding"
                    android:paddingEnd="@dimen/card_button_padding"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/loading_screen_bg"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/awesome_robot"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="110dp"
            android:paddingBottom="150dp"
            android:scaleType="fitCenter" />

    </RelativeLayout>

</RelativeLayout>